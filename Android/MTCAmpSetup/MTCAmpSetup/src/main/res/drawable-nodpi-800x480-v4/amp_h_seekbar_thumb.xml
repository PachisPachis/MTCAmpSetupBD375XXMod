<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>

    <item>
        <!-- Shadow -->
        <shape  android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="2px" />
        </shape>
    </item>
    <item android:top="1px" android:bottom="1px" android:left="1px" android:right="1px">
        <shape android:shape="rectangle" >
            <stroke android:color="#7e7d7d" android:width="1px"/>
            <corners android:radius="1px" />
            <size android:height="22px" android:width="10px"/>
            <gradient
                android:type="linear"
                android:angle="180"
                android:gradientRadius="200%p"
                android:startColor="#7e7d7d"
                android:endColor="#616161"/>

        </shape>
    </item>
    </layer-list>
</item>
</selector>