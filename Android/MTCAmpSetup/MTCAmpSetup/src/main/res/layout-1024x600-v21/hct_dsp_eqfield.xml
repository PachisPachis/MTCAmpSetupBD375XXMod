                        android:scaleType="fitXY"
                        android:src="@drawable/left_seek_bg" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21px"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:scaleType="center"
                        android:text="@string/frequency_15"
                        android:textColor="@color/white"
                        android:textSize="18px" />

                    <com.microntek.ampsetup.VerticalSeekBar
                        android:id="@+id/sound_progress15"
                        android:layout_width="match_parent"
                        android:layout_height="304px"
                        android:layout_gravity="center"
                        android:max="20"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:progress="0"
                        android:progressDrawable="@drawable/dsp_left_seekbar"
                        android:secondaryProgress="0"
                        android:splitTrack="false"
                        android:thumb="@drawable/eq_left_thumb"
                        android:thumbOffset="20px" />

                    <TextView
                        android:id="@+id/sound_progress15_vaule"
                        android:layout_width="match_parent"
                        android:layout_height="21px"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:scaleType="center"
                        android:textColor="@color/white"
                        android:textSize="18px" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:paddingTop="27px">

            <ImageButton
                android:id="@+id/soundeffect_arrowhead_left"
                android:layout_width="58px"
                android:layout_height="50px"
                android:layout_marginLeft="30px"
                android:background="@android:color/transparent"
                android:src="@drawable/dsp_bleft" />

            <TextView
                android:id="@+id/amp_soundmode"
                android:layout_width="180px"
                android:layout_height="50px"
                android:layout_marginLeft="4px"
                android:layout_marginRight="4px"
                android:background="@drawable/dsp_sound_bg"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="25px" />

            <ImageButton
                android:id="@+id/soundeffect_arrowhead_right"
                android:layout_width="58px"
                android:layout_height="50px"
                android:background="@android:color/transparent"
                android:src="@drawable/dsp_bright" />

            <ImageView
                android:id="@+id/eq_reset"
                android:layout_width="130px"
                android:layout_height="72px"
                android:layout_marginLeft="60px"
                android:src="@drawable/btn_reset" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="3px"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/eq_custom1"
                    android:layout_width="94px"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_btn"
                    android:maxLines="1"
                    android:paddingBottom="22px"
                    android:text="@string/custom_1"
                    android:textColor="@drawable/custontextcolor"
                    android:textSize="18px" />

                <View
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/eq_custom2"
                    android:layout_width="94px"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_btn"
                    android:maxLines="1"
                    android:paddingBottom="22px"
                    android:text="@string/custom_2"
                    android:textColor="@drawable/custontextcolor"
                    android:textSize="18px" />

                <View
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/eq_custom3"
                    android:layout_width="94px"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_btn"
                    android:maxLines="1"
                    android:paddingBottom="22px"
                    android:text="@string/custom_3"
                    android:textColor="@drawable/custontextcolor"
                    android:textSize="18px" />

                <View
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
