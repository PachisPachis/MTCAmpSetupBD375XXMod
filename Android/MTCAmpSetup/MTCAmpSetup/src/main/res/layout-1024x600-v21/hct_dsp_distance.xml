                <ImageButton android:layout_gravity="center_vertical" android:id="@+id/speaker_h_up" android:background="@drawable/dsp_bt_up" android:layout_width="44px" android:layout_height="46px" android:layout_marginTop="1px" android:layout_marginRight="5px"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="350px" android:layout_height="52px" android:layout_marginTop="218px">
            <TextView android:textSize="22px" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center" android:layout_width="120px" android:layout_height="match_parent" android:text="@string/trumpet_v_distance" android:maxLines="1"/>
