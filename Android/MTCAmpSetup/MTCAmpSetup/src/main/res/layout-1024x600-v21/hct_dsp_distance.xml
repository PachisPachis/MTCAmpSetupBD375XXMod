                <ImageButton android:layout_gravity="center_vertical" android:id="@+id/speaker_v_down" android:background="@drawable/dsp_bt_down" android:layout_width="44px" android:layout_height="46px" android:layout_marginLeft="5px" android:layout_marginTop="1px"/>
                <TextView android:textSize="25px" android:textColor="@color/white" android:gravity="center" android:id="@+id/speaker_v_info" android:layout_width="0px" android:layout_height="match_parent" android:layout_weight="1"/>
