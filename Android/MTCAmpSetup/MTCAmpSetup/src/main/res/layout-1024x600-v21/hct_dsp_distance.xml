            </LinearLayout>
        </FrameLayout>
        <Button android:textSize="25px" android:textColor="@color/white" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/affirm" android:background="@drawable/dsp_bt_affirm" android:layout_width="158px" android:layout_height="57px" android:layout_marginBottom="24px" android:text="@string/affirm"/>
    </FrameLayout>
</LinearLayout>
